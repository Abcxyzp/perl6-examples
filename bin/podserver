#!/usr/local/bin/perl6

use Pod::Server;

if @*ARGS.elems == 0 { Pod::Server.new.server(); }  # run from command line
else                 { Pod::Server.new.request(); } # run from netcat

=begin pod

=head1 SEE ALSO
L<Pod::Parser>,
L<HTTP::Daemon>, HTTP 1.1 (L<http://www.ietf.org/rfc/rfc2616.txt>)

=end pod
